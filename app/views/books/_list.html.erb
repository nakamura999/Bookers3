<!-- 共通部分　プロフィールから投稿まで -->
          <div class="col-xs-3">
            <!-- プロフィール -->
            <!-- user: @user -->
             <h2>User info</h2>
             <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
             <table class="table">
              <tbody>
                <tr>
    	            <th>name</th>
    	            <th><%= user.name %></th>
                </tr>
                <tr>
    	            <th>introduction</th>
    	            <th><%= user.introduction %></th>
                </tr>
                <tr>
                  <th>follows</th>
                  <th>
                    <%= link_to follows_user_path(user.id) do %>
                    <%= user.follower.count %>
                    <% end %>
                    </th>
                </tr>
                <tr>
                  <th>followes</th>
                  <th>
                    <%= link_to followers_user_path(user.id) do %>
                    <%= user.followed.count %>
                    <% end %>
                  </th>
                </tr>
              </tbody>
             </table>
             <div class="row">
               <% if user == current_user %>
                 <%= link_to  edit_user_path(@user.id) do %>
                  <span class= "col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
                 <% end %>
               <% end %>

               <!-- フォローボタン -->
               <% unless user == current_user %>
                  <% if current_user.following?(user) %>
                   <%= link_to "フォロー外す", unfollow_path(user.id), class: "btn btn-primary col-xs-8", method: :delete %>
                    <% else %>
                   <%= link_to "フォローする", follow_path(user.id), class: "btn btn-success col-xs-8", method: :post %>
                  <% end %>
               <% end %>
               <!-- フォローボタンここまで -->
             </div>


             <!-- 新規投票欄↓ -->
             <!-- book: @book  @book= Book.new -->
             <h2>New book</h2>
               <%= form_for(book) do |book| %>
                 <div class="field row">
                   <label for="book_title">Title</label>
                   <%= book.text_field :title, class: "col-xs-12" %>
                 </div>

                 <div class="field row">
                   <label for="book_opinion">Opinion</label>
                   <%= book.text_area :body, class: "col-xs-12" %>
                 </div>

                 <div class="actions row">
                   <%= book.submit "Create Book", class: "btn btn-primary col-xs-12" %>
                 </div>
               <% end %>
          </div>
